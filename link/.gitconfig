[user]
  name = Nathan Stilwell

[color]
  ui = auto
  branch = auto
  diff = auto
  interactive = auto
  status = auto

[core]
  excludesfile = ~/.gitignore-global
  editor = /usr/bin/vim

[push]
  default = tracking

[alias]
  tree = log --graph --decorate --date=relative --abbrev-commit
  mine = log --author 'Nathan Stilwell'
  recent = log -p -n 5
  last = log -p -n 1
  st = status -sb
  it = grep -n
  co = checkout
  ci = commit -m
  ca = commit -a -m
  df = diff
  scorch = clean -fdx
  delete = branch -d
  Delete = branch -D
  dropit = checkout -- .
  who = shortlog -sn
  sub = submodule
# Borrrowed from Doug Russell - https://github.com/rustle/KaleidoscopeVCSTidbits
  ksshow = "!f() { local SHA=${1:-HEAD}; git difftool -y -t Kaleidoscope $SHA^..$SHA; }; f"

[branch "master"]
  remote = origin
  merge = refs/heads/master

[gc]
  auto = 0
[diff]
  tool = vimdiff
[difftool]
  prompt = false
[mergetool]
  keepBackup = false
[merge]
  tool = vimdiff
  conflictstyle = diff3
  prompt = false

[include]
  path = ~/.gitconfig-extras
