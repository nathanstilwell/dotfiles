# Extra "Nerd Font characters"
# 󱠿   󰯈
# ╭─────────
# │    
# ╰───
# in case you forget again,
# you can type unicode character by switching
# the keyboard layout to "Unicode Hex Input"
# and then holding option and typing the hex code
#
# Ok, check this out - https://github.com/ryanoasis/powerline-extra-symbols
#
# but really the old ways are best. Use █ ▓ ▒ ░  ▖ ▗ ▘▘▘▘▝▘ ▚ ▞ ▙ ▛ ▜ ▟
#

format = """
[▛▀▀▀▀▀▀▀▀▀▀▀▀▀](fg:green)$fill[▝▝▝▝▘▀▜▃▂](fg:green)$time
[▌](fg:green)$nodejs$directory$git_branch$git_commit $git_status
[▙▃▂▁ ](fg:green)$character
"""
right_format = "$battery"
command_timeout = 5000

#
#   Top Line
#

[nodejs]
symbol = ""
format = "[ $symbol ](fg:green)[($version) ](fg:green)"

[fill]
symbol = "▀"
style = "fg:green"

[time]
disabled = false
format = "[ $time ](fg:green)"
time_format = "%d %b %Y ▪︎ %T"

[battery]
format = "[$symbol]($style)"
unknown_symbol = "󰂑"

[[battery.display]]
threshold = 100
discharging_symbol = "󰁹"
charging_symbol = "󰂄"
style = "fg:bright-green"

[[battery.display]]
threshold = 80
discharging_symbol = "󰁽"
charging_symbol = "󰂄"
style = "fg:green"

[[battery.display]]
threshold = 30
discharging_symbol = "󰁽"
charging_symbol = "󰂄"
style = "fg:yellow"

[[battery.display]]
threshold = 10
discharging_symbol = "󰂎"
charging_symbol = "󰂄"
style = "fg:red "

#
#   Middle Line
#

[directory]
truncation_length = 10
format = '[ ░▒▓█](fg:cyan)[$path](fg:black bg:cyan)[█▓▒░ ](fg:cyan)'
#

[git_branch]
symbol = " "
always_show_remote = true
format = '[ ▞ $symbol$branch( 󰤉$remote_name) ▚ ](fg:purple)'
only_attached = true

[git_commit]
format = '[  $hash](fg:purple )'
only_detached = true

[git_status]
format = '([($conflicted)($untracked)($modified)($deleted)($staged)($renamed)($stashed) $ahead_behind](fg:purple))'
ahead = "⇡${count}"
behind = "⇣${count}"
diverged = '\[⇡${ahead_count} ⇣${behind_count}\]'
conflicted = "[󰋔](red)"
untracked = "[?](red)"
modified = "[M](red)"
deleted = "[D](red)"
staged = "[+](green)"
renamed = "[R](green)"
stashed = '󱗞 '

#
# Bottom Line
#

#
# Prompt character
#

[character]
success_symbol = "[ △ ](bold green)"
error_symbol = "[ ▲ ](bold red)"

